<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <entity name="Ant\Bundle\Entity\Image" table="ant_Images">
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist"  method="preUpload"/>
            <lifecycle-callback type="preUpdate"   method="preUpload"/>
            <lifecycle-callback type="postPersist" method="upload"/>
            <lifecycle-callback type="postUpdate"  method="upload"/>
            <lifecycle-callback type="postRemove"  method="removeUpload"/>
        </lifecycle-callbacks>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="path" type="string" column="path" length="255" unique="true"/>
        <field name="created" type="datetime" column="created">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updated" type="datetime" column="updated">
            <gedmo:timestampable on="update"/>
        </field>

        <one-to-one field="news" target-entity="News" inversed-by="image"/>
        <one-to-one field="ad" target-entity="Ad" inversed-by="image"/>
        <many-to-one field="portfolio" target-entity="Portfolio" inversed-by="images"/>
    </entity>
</doctrine-mapping>
